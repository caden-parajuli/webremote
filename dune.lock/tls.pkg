(version 2.0.3)

(build
 (progn
  (when
   %{pkg-self:dev}
   (run dune subst))
  (run dune build -p %{pkg-self:name} -j %{jobs})))

(depends
 ocaml
 dune
 mirage-crypto
 mirage-crypto-ec
 mirage-crypto-pk
 mirage-crypto-rng
 x509
 domain-name
 fmt
 kdf
 logs
 ipaddr
 ohex
 digestif
 ptime)

